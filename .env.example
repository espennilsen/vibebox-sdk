# Root Environment Variables - Task T005
# Copy this to .env and fill in the values

# Docker Compose - For dev container compatibility
# Set to your project root path when running from dev container
# Default: . (current directory)
WORKSPACE_ROOT=/Users/yourname/Dev/vibebox

# Database - Use local PostgreSQL from docker-compose by default
DATABASE_URL="postgresql://<DB_USER>:<DB_PASSWORD>@localhost:5432/vibebox_dev?schema=public"
DATABASE_URL_TEST="postgresql://<DB_USER>:<DB_PASSWORD>@localhost:5432/vibebox_test?schema=public"

# Backend
BACKEND_PORT=3000
NODE_ENV=development

# Frontend
FRONTEND_PORT=5173
VITE_API_URL=http://localhost:3000
